{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "cli": { "analytics": false },
  "projects": {
    "interntracker": {
      "projectType": "application",
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/interntracker",
            "index": "src/index.html",
            "main": "src/main.ts",
            "tsConfig": "tsconfig.app.json",
        "styles": [  "src/styles.scss"],
              "assets": [
                    "src/favicon.ico",
                     "src/assets",
                    { "glob": "**/*", "input": "node_modules/material-icons/iconfont", "output": "assets/material-icons" }], 
            "scripts": [],
            "allowedCommonJsDependencies": ["@tauri-apps/api"]
          },
          "configurations": {
            "production": {"baseHref": "./",
             "deployUrl": "./",

              "budgets": [
                { "type": "initial", "maximumWarning": "2MB", "maximumError": "5MB" },
                { "type": "anyComponentStyle", "maximumWarning": "8kb", "maximumError": "12kb" }
              ],
              "outputHashing": "all",
              "optimization": true,
              "extractLicenses": true,
              "sourceMap": false
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": { "port": 1420 },
          "configurations": {
            "production": { "buildTarget": "interntracker:build:production" },
            "development": { "buildTarget": "interntracker:build:development" }
          },
          "defaultConfiguration": "development"
        }
      }
    }
  }
}
