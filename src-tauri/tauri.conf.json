{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "interntracker",
  "version": "0.1.0",
  "identifier": "com.interntracker.desktop",
  "build": {
    "beforeDevCommand": "npm run start",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist/interntracker"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "decorations": false,
        "title": " ",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
       
      "csp": "default-src 'self' asset:; script-src 'self' 'unsafe-inline' 'unsafe-eval' asset:; style-src 'self' 'unsafe-inline' asset:; img-src 'self' data: blob: asset:; font-src 'self' data: asset:; connect-src 'self' tauri: https:; media-src 'self' asset:; frame-src 'self' asset:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "sql": { "preload": ["sqlite:interns.db"] }
  }
}
